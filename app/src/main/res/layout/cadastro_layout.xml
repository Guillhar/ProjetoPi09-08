<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bannerdois"
    android:orientation="vertical"
    tools:context=".Cadastro_activity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5C000000">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="40sp"
            android:text="Strong Innovation"
            android:textColor="#8A63B8"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginLeft="110sp"
            android:layout_marginTop="75sp"
            android:text="Technology & Information"
            android:textColor="#C66FA3"
            android:textSize="25sp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="600dp"
            android:background="@drawable/botao1"
            android:text="login"
            android:textStyle="bold" />


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp"
            android:background="@drawable/botao"
            android:hint="Email ou telefone "
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="360dp"
            android:background="@drawable/botao"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="165dp"
            android:layout_marginRight="150dp"
            android:background=""
            android:text="google"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="150dp"
            android:textColor="#1877F2"
            android:background=""
            android:text="Facebook"


    </androidx.coordinatorlayout.widget.CoordinatorLayout
</androidx.coordinatorlayout.widget.CoordinatorLayout>